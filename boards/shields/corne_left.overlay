/ {
    backlight: backlight {
        compatible = "zmk,backlight";
        label = "Backlight";
        chain-length = <21>; // Number of SK6812s on the left
        color-order = <0>; // 0 = RGB, 1 = GRB (use GRB if red appears green)
        data-gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>; // Your actual data pin for key LEDs
    };
};

&zmk {
    chosen {
        zmk,backlight = &backlight;
    };
};
